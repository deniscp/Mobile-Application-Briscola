<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.polimi.group06.activities.GameActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"></LinearLayout>

    <TextView
        android:id="@+id/winner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="171dp"
        android:layout_marginTop="108dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/briscolaimage"
        android:layout_width="93dp"
        android:layout_height="158dp"
        android:layout_marginBottom="220dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/savequit_button"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/savequit_button"
        android:layout_width="115dp"
        android:layout_height="37dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="288dp"
        android:layout_marginTop="168dp"
        android:text="Save + Quit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/cardzeroimage"
        android:layout_width="93dp"
        android:layout_height="155dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="44dp"
        android:layout_marginStart="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cardoneimage"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/cardoneimage"
        android:layout_width="93dp"
        android:layout_height="155dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="45dp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cardtwoimage"
        app:layout_constraintStart_toEndOf="@+id/cardzeroimage" />

    <ImageView
        android:id="@+id/cardtwoimage"
        android:layout_width="93dp"
        android:layout_height="155dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="44dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardoneimage" />

    <ImageView
        android:id="@+id/humanplayed"
        android:layout_width="93dp"
        android:layout_height="155dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/buttonbordergameactivity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/robotplayed"
        android:layout_width="93dp"
        android:layout_height="155dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/robotcardborder"
        android:layout_width="93dp"
        android:layout_height="155dp"
        android:layout_marginBottom="212dp"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/buttonbordergameactivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/briscolaimage"
        app:layout_constraintStart_toEndOf="@+id/humanplayed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85" />

    <ImageView
        android:id="@+id/robothand1"
        android:layout_width="93dp"
        android:layout_height="164dp"
        android:layout_marginStart="25dp"
        android:layout_y="-150dp"
        android:layout_x="-100dp"
        app:layout_constraintEnd_toStartOf="@+id/robothand2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/robothand2"
        android:layout_width="93dp"
        android:layout_height="164dp"
        app:layout_constraintEnd_toStartOf="@+id/robothand3"
        app:layout_constraintStart_toEndOf="@+id/robothand1"
        app:srcCompat="@drawable/back"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/robothand3"
        android:layout_width="93dp"
        android:layout_height="164dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/robothand2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/remaining"
        android:layout_width="93dp"
        android:layout_height="164dp"
        android:layout_below="@+id/briscolaimage"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="54dp"
        android:background="@drawable/back"
        android:gravity="center_horizontal|center_vertical"
        android:rotation="270"
        android:text="remaining"
        android:textColor="@android:color/background_light"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/savequit_button" />

</android.support.constraint.ConstraintLayout>
