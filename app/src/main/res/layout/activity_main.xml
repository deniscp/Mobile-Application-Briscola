<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/settings_frame"
    tools:context="it.polimi.group06.activity.GameActivity">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="it.polimi.group06.activity.MainActivity">


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/start_button"
            android:layout_width="181dp"
            android:layout_height="60dp"
            android:layout_marginBottom="24dp"
            android:layout_marginRight="56dp"
            android:layout_marginLeft="55dp"
            android:soundEffectsEnabled="false"
            android:text="@string/start"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_label"
            android:textSize="20sp"
            app:backgroundTint="@android:color/holo_orange_light"
            app:layout_constraintBottom_toTopOf="@+id/load_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/load_button"
            android:layout_width="181dp"
            android:layout_height="60dp"
            android:layout_marginBottom="24dp"
            android:layout_marginRight="56dp"
            android:layout_marginLeft="55dp"
            android:soundEffectsEnabled="false"
            android:drawableLeft="@drawable/ic_file_upload"
            android:text="Load"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/statistics_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/statistics_button"
            android:layout_width="181dp"
            android:layout_height="63dp"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="115dp"
            android:layout_marginStart="115dp"
            android:layout_marginRight="56dp"
            android:drawableLeft="@drawable/ic_chart"
            android:layout_marginLeft="55dp"
            android:text="@string/statistics"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/settings_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/settings_button"
            android:layout_width="181dp"
            android:layout_height="60dp"
            android:layout_marginBottom="24dp"
            android:layout_marginRight="56dp"
            android:layout_marginLeft="55dp"
            android:drawableLeft="@drawable/ic_settings"
            android:includeFontPadding="false"
            android:text="@string/settings"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/quit_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/quit_button"
            android:layout_width="181dp"
            android:layout_height="60dp"
            android:layout_marginBottom="36dp"
            android:layout_marginRight="56dp"
            android:layout_marginLeft="55dp"
            android:drawableLeft="@drawable/ic_exit_app"
            android:text="@string/exit"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/briscola"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="67dp"
            android:layout_marginLeft="66dp"
            android:layout_marginTop="64dp"
            android:text="BRISCOLA"
            android:textSize="60sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>
</FrameLayout>